<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rlJurusan">

        <ImageView
            android:id="@+id/iv_gambar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:contentDescription="gambar" />

        <TextView
            android:id="@+id/tv_jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/iv_gambar"
            android:text="Nama Jurusan" />

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/tv_jurusan"
            android:layout_below="@+id/tv_jurusan"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:maxLength="55"
            android:text="Deskripsi singkat mengenai jurusan yang akan dijelaskan melalui teks yang singkat dan jelas" />

</RelativeLayout>